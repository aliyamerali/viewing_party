<%= render partial: '/partials/discover_movie_options' %><br>
<br>
<% if params[:search] %>
  <h3>Top 40 Search Results</h3>
<% else %>
  <h3>Top 40 Movies</h3>
<% end %>

<ul>
  <% @movies.each do |movie| %>
  <li> <%= link_to movie.title, "/movies/#{movie.id}" %>, Vote Average: <%= movie.vote_average %> </li>
  <% end %>
</ul>
