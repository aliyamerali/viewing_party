<h1> <%= @movie.title %> </h1>

<%= button_to "Create a Viewing Party", "/parties/new?movie_id=#{@movie.id}", params: {movie_id: @movie.id}, method: :get %>
<br>

<h3>Vote Average: <%= @movie.vote_average %></h3>
<h3>Runtime: <%= @movie.runtime[:hours] %> hours <%= @movie.runtime[:minutes] %> minutes</h3>

<h4>Genres:</h4>
<ul>
  <% @movie.genres.each do |genre| %>
  <li><%= genre %></li>
  <% end %>
</ul>

<h4>Summary:</h4>
<%= @movie.overview %>

<h4>Cast</h4>
<table>
  <th>Actor</th>
  <th>Character</th>
  <% @cast.each do |cast| %>
    <tr>
      <td><%= cast.actor %></td>
      <td><%= cast.character %></td>
    </tr>
  <% end %>
</table>

<h4>Total Reviews: <%= @reviews.length %></h4>

<table>
  <th>Author</th>
  <th>Review</th>
  <% @reviews.each do |review| %>
    <tr>
      <td> <%= review.author %> </td>
      <td> <%= review.content %> </td>
    </tr>
  <% end %>
</table>

<br><br>

<h4>Similar Movies</h4>
<table>
  <th>Title</th>
  <th>Summary</th>
  <th>Vote Average</th>
  <% @similar_movies.each do |movie| %>
  <tr>
    <td><%= movie.title %></td>
    <td><%= movie.overview %></td>
    <td><%= movie.vote_average %></td>
    <% end %>
  </tr>
</table>
